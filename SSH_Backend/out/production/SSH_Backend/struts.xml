<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="com.entity" extends="struts-default, json-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>
        <interceptors>
            <interceptor-stack name="demostack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="json"/>
            </interceptor-stack>
        </interceptors>
        <action name="vprocesslogin" class="com.entity.vLoginAction" method="vprocesslogin">
            <result type="json"/>
            <interceptor-ref name="demostack"/>
        </action>
        <action name="getbooks" class="com.entity.BookList" method="queryBookList">
            <result type="json"/>
            <interceptor-ref name="demostack"/>
        </action>
        <action name="getusers" class="com.entity.UserList" method="queryUserList">
            <result type="json"/>
            <interceptor-ref name="demostack"/>
        </action>
        <action name="signon" class="com.entity.UserAdmin" method="signOn">
            <result type="json"/>
            <interceptor-ref name="demostack"/>
        </action>
        <action name="getuser" class="com.entity.UserAdmin" method="queryUser">
            <result type="json"/>
            <interceptor-ref name="demostack"/>
        </action>
        <action name="getorders" class="com.entity.OrderList" method="queryOrderList">
            <result type="json"/>
            <interceptor-ref name="demostack"/>
        </action>
        <action name="getorder" class="com.entity.Order" method="queryOrder">
            <result type="json"/>
            <interceptor-ref name="demostack"/>
        </action>
    </package>
</struts>